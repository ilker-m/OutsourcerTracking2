@model OutsourcerTracking.Models.ViewComponentModels.WorkSituationListViewComponentModel

<div class="list-group list-group-flush">
    @foreach (var situation in Model.Situations)
    {
        <a href="/employeehome/index/@situation.Id" class="list-group-item" data-toggle="tooltip" data-placement="right" title="@situation.Description">@situation.Name</a>
    }
</div>
